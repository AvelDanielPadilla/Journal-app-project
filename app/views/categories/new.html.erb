<%= form_with model: @category, url: create_cat_path, method: :post do |f |%>

  <div class = "form-group row mt-3">

    <%= f.label :number, "Number" %>
    <%= f.text_field :number, class: "form-control", placeholder: "No." %>,

  </div>

  <div class="form-group row mt-3">

    <%= f.label :note, "Note" %>
    <%= f.text_field :note, class: "form-control", placeholder: "Category name" %>

  </div>

  <div class=" form-group row mt-3">

    <%= f.label :description, "Desc." %>
    <%= f.text_field :description, class: "form-control", placeholder: "Short description" %>

  </div>

  <div class=" form-group row mt-3">
    <%= f.submit "Create Category", class: "btn btn-primary" %>
  </div>

<% end %>

  
    