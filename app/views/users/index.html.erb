
<h1>Hello</h1>
<h6><%= link_to 'Create new Category', new_category_path %></h6>
<br>
<thead>
  <th>No.</th>
  <th>Category</th>
  <th>Desc.</th>
</thead>

<tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.number %></td>
      <td><%= category.note %></td>
      <td><%= category.description %></td>
      <td><%= button_to 'Show', categories_path(category.id) %></td>
      <td><%= button_to 'Edit', edit_category_path(category.id)%></td>
      <td><%= button_to 'Delete', delete_category_path(category.id), method: :delete %></td>
    </tr>
  <% end %>
</tbody>

